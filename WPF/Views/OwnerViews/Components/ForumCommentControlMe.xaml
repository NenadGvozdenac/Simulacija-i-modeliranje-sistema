<UserControl x:Class="BookingApp.WPF.Views.OwnerViews.Components.ForumCommentControlMe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookingApp.WPF.Views.OwnerViews.Components"
               mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="365">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Margin="5" BorderBrush="Black" Background="LightBlue" BorderThickness="1" CornerRadius="5">
            <TextBlock Text="{Binding Comment}" Margin="5" TextWrapping="Wrap"/>
        </Border>
        <StackPanel Grid.Column="1" Margin="5">
            <Image Source="../../../../Resources/Assets/user.png" Width="40" Margin="5"/>
            <TextBlock Text="ME" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
