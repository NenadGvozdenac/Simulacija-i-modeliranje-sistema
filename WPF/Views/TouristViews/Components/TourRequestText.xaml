<UserControl x:Class="BookingApp.WPF.Views.TouristViews.Components.TourRequestText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookingApp.WPF.Views.TouristViews.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="180">
    <Grid>
        <TextBlock Text="Tour Request" FontWeight="DemiBold" FontSize="20" Foreground="Blue" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
        <TextBlock Text="{Binding Id}" FontWeight="DemiBold" FontSize="20" Foreground="Blue" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="140,0,0,0"/>
    </Grid>
</UserControl>
