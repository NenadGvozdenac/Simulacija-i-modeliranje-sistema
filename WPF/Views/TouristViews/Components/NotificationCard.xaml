<UserControl x:Class="BookingApp.WPF.Views.TouristViews.Components.NotificationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookingApp.WPF.Views.TouristViews.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid Background="White">
        <TextBlock FontSize="25" Text="{Binding Name}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,0,0,0"/>
        <TextBlock FontSize="25" Text="{Binding Surname}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="209,0,0,0"/>

    </Grid>
</UserControl>
