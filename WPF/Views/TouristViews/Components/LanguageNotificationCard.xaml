<UserControl x:Class="BookingApp.WPF.Views.TouristViews.Components.LanguageNotificationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookingApp.WPF.Views.TouristViews.Components"
             mc:Ignorable="d" 
             Height="150" d:DesignWidth="500">
    <Border Background="White" BorderBrush="Black" CornerRadius="40">
        <Grid>
            <TextBlock Text="A tour has been created with the language you requested:" FontSize="18" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0"/>
            <TextBlock Text="{Binding Language}"  FontSize="18" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,89,0,0"/>
        </Grid>
    </Border>
</UserControl>
